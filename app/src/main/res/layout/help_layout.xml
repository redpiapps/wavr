<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/helpContainer"
    android:layout_width="match_parent"
    android:layout_height="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightest_grey"></View>

        <ImageView
            android:id="@+id/mobileImage"
            android:layout_width="@dimen/mobile_size"
            android:layout_height="@dimen/mobile_size"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/mobile" />

        <ImageView
            android:id="@+id/handImage"
            android:layout_width="@dimen/hand_size"
            android:layout_height="@dimen/hand_size"
            android:layout_toLeftOf="@id/mobileImage"
            android:src="@drawable/hand" />

        <TextView
            android:id="@+id/helpInstr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mobileImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:textSize="18sp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>
